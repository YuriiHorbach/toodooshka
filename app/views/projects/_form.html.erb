<%= form_with model: project do |f| %>
  <% if project.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(project.errors.count, 'error') %></h2>
      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="">
    <%= f.label "Project name" %>
    <%= f.text_field :name %>
  </div>
  <div class="">
    <%= f.submit %>
  </div>
<% end %>
